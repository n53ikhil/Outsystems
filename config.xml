<?xml version='1.0' encoding='utf-8'?>
<widget id="rd.sample.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>RD Sample App</name>
	<description>
		A sample application for working with RDService
	</description>
	<author href="http://www.eclipse.org/thym" email="thym-dev@eclipse.org">
		Mantra Softech India Pvt. Ltd.
	</author>

	<content src="index.html" />
	<!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
		<allow-intent href="market:*" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
	
	<feature name="RDSample">
		<param name="android-package" value="com.mantra.plugin.RDSample" />
		<param name="id" value="com.mantra.rd.sample" />
	</feature>
	<feature name="Whitelist">
		<param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
		<param name="onload" value="true" />
		<param name="id" value="cordova-plugin-whitelist" />
	</feature>
	<preference name="Orientation" value="portrait" />
	
	<engine name="android" version="5.2.0-nightly.2016.5.24.9738079c" />
</widget>
